<% if object.errors.any? %>
  <div class="error-explanation">
    <div class="alert alert-danger">
      <%= t ".m_count_er", count: pluralize(object.errors.count, t(".err")) %>.
    </div>
    <ul>
    <% object.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
